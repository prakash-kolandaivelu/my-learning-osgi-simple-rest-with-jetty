	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<excludes>
					<exclude>logback.xml</exclude>
					<exclude>run.sh</exclude>
					<exclude>configuration/**</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.0.1</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>
							${pom.artifactId}
						</Bundle-SymbolicName>
						<Import-Package>
							my.learnings.osgi.rs,
							javax.ws.rs,
							javax.ws.rs.core,
							org.slf4j,
							com.sun.jersey.spi.container.servlet,
							com.sun.jersey.core.provider,
							com.fasterxml.jackson.core,
							com.fasterxml.jackson.databind,
							io.jsonwebtoken,
							javax.servlet,
							javax.servlet.http,
							org.json
						</Import-Package>
						<!-- <Bundle-Activator>my.learnings.osgi.rs.activator.Activator</Bundle-Activator> -->
						<Jaxrs-Resources>,${classes;ANNOTATION;javax.ws.rs.Path}</Jaxrs-Resources>
						<Web-ContextPath>/test</Web-ContextPath>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<appendAssemblyId>false</appendAssemblyId>
					<!-- do not attach default artifact. We do it separately -->
					<attach>false</attach>
				</configuration>
				<executions>
					<!-- default distro (everything) -->
					<execution>
						<id>distro-full</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<descriptors>
								<descriptor>src/assemble/package.xml</descriptor>
							</descriptors>
							<finalName>${projectName}-${release.version}</finalName>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
